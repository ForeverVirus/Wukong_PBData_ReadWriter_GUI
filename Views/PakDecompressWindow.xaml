<Window x:Class="Wukong_PBData_ReadWriter_GUI.Views.PakDecompressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Wukong_PBData_ReadWriter_GUI.ViewModels"
        Title="解包PAK" Width="600" Height="400" AllowDrop="True" WindowStartupLocation="CenterScreen"
        DataContext="{Binding PakDecompressViewModel, Source={StaticResource Locator}}"
        Drop="Grid_OnDrop" >
    <Window.Resources>
        <local:ViewModelLocator x:Key="Locator" />
    </Window.Resources>
    <Grid>
        <TextBlock Text="拖拽要解包的Pak文件夹到此处" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
    </Grid>
</Window>
